---
import Hero from "../components/page-components/index/Hero.svelte"
import ServiceTiers from '../components/page-components/index/ServiceTiers.svelte'
import WhatWeOffer from '../components/page-components/index/WhatWeOffer.svelte'
import Layout from "../components/layout-components/Layout.astro"
import QuickQuoteForm from "../components/forms/QuickQuoteForm/QuickQuoteForm.svelte"
---

<Layout title="ICExpress" modalIds={[
	"termsAndConditions",
	"declarationOfWeights",
	"generic",
	"number"
]}>
	<div slot="hero">
		<h1 id="get-a-quick-quote">Get a Quick Quote</h1>
		<QuickQuoteForm client:load />
	</div>

	<ServiceTiers />
	<Hero client:load />
	<WhatWeOffer client:load />

</Layout>


<style>
	#get-a-quick-quote {
		text-align: center;
		color: var(--light);
		font-size: 3rem;
		padding: 1rem;
		text-shadow: 3px 3px 0px var(--slate);
	}
</style>